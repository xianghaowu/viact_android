<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/large_margin"
    android:id="@+id/item_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/item_iv_icon"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_marginHorizontal="@dimen/bottom_center_margin"
        android:src="@drawable/ic_layers"
        app:tint="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_iv_icon"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:text="Level2"/>

        <TextView
            android:id="@+id/item_tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/menu_disable"
            android:textSize="@dimen/_9sdp"
            android:text="2 Photos"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_txt_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/item_iv_more"
        android:background="@drawable/round_txt_bg_yellow"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:paddingVertical="2dp"
        android:text="5"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/item_txt_mark"
        android:background="@drawable/ic_play_circle"
        android:layout_marginHorizontal="@dimen/padding_size"/>

    <ImageView
        android:id="@+id/item_iv_more"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:src="@drawable/ic_more_vert"
        app:tint="@color/menu_disable" />
</RelativeLayout>