<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activities.EditSitemap">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/edit_site_photoview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/pinsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/edit_site_thumbnail"
            android:layout_width="192dp"
            android:layout_height="192dp"/>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_capture_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/padding_size"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/menu_disable"
        tools:text="@string/capture_capture_working" />

    <TextView
        android:id="@+id/txt_choose_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/padding_size"
        android:textStyle="bold"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/menu_disable"
        android:text="@string/main_desc_camera_built_in"/>
</RelativeLayout>