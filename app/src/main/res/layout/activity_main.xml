<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_bar_height"
        android:background="@color/layout_bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_ll_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_size"
                android:layout_marginTop="@dimen/padding_size"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/main_item_desc_mobile"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_built_in_capture"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:background="@drawable/round_btn_bg"
                        android:text="@string/main_capture_button"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_built_in_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_preview_button"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_built_in_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/capture_upload_file"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_ll_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_size"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/main_item_desc_camera_fun"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_capture"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_capture_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_capture_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_preview"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_preview_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_preview_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_preview2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_preview2_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_preview2_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_preview3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_preview3_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_preview3_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_live"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_live_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_live_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_osc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_osc_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_osc_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_settings"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:enabled="false"
                        android:text="@string/main_setting_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_setting_desc" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_ll_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_size"
                android:layout_marginTop="@dimen/padding_size"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_full_demo"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:text="@string/main_full_demo_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_full_demo_desc" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/main_item_desc_other"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_list_camera_file"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:padding="@dimen/padding_size"
                        android:enabled="false"
                        android:text="@string/main_camera_file_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_camera_file_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_play"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:padding="@dimen/padding_size"
                        android:text="@string/main_play_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_play_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_stitch"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:padding="@dimen/padding_size"
                        android:text="@string/main_stitch_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_stitch_desc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:minHeight="64dp"
                    android:paddingStart="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp">

                    <Button
                        android:id="@+id/btn_firmware_upgrade"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/btn_height"
                        android:background="@drawable/round_btn_bg"
                        android:padding="@dimen/padding_size"
                        android:enabled="false"
                        android:text="@string/main_fw_upgrade_button"
                        android:textAllCaps="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/main_fw_upgrade_desc" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/main_item_desc_connect"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="8dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_connect_by_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_connect_wifi_button"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_connect_by_usb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_connect_usb_button"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btn_close_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/main_disconnect_button"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/main_view_bg_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dlg_bg_transparent">
        <LinearLayout
            android:id="@+id/main_view_connect_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@drawable/round_bottom_white_bar"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/main_btn_wifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn_bg"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:textColor="@color/menu_active"
                android:textAllCaps="false"
                android:text="@string/main_connect_wifi_button"/>

            <Button
                android:id="@+id/main_btn_usb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_btn_bg"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginVertical="@dimen/activity_vertical_margin"
                android:textColor="@color/menu_active"
                android:textAllCaps="false"
                android:text="@string/main_connect_usb_button"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_bar_height"
                android:layout_marginVertical="@dimen/activity_vertical_margin"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/layout_bottom"/>
    </LinearLayout>

</RelativeLayout>
