<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_marginTop="@dimen/bottom_center_margin"
        android:background="@drawable/round_bottom_bar">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/ll_bottom_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bottom_iv_main"
                    android:layout_width="@dimen/bar_image_size"
                    android:layout_height="@dimen/bar_image_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_home"
                    app:tint="@color/menu_active" />
                <TextView
                    android:id="@+id/bottom_txt_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_active"
                    android:textSize="@dimen/text_size_12"
                    android:text="@string/menu_home"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ll_bottom_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bottom_iv_other"
                    android:layout_width="@dimen/bar_image_size"
                    android:layout_height="@dimen/bar_image_size"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_other"
                    app:tint="@color/menu_active" />
                <TextView
                    android:id="@+id/bottom_txt_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/menu_active"
                    android:textSize="@dimen/text_size_12"
                    android:text="@string/menu_other"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_white_bg">
        <LinearLayout
            android:id="@+id/bottom_ll_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/circle_bottom_btn_bg">
            <ImageView
                android:id="@+id/bottom_iv_center"
                android:layout_width="@dimen/bottom_circle_size"
                android:layout_height="@dimen/bottom_circle_size"
                android:layout_margin="4dp"
                android:padding="@dimen/padding_size"
                android:src="@drawable/ic_connect"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>